<h1>Registra nuevo estudiante</h1>

<%= form_for :student, url: students_path do |f| %>
  <% if @student.errors.any? %>
    <div id="errors_explanation" >
      <h2>
        <%= "Se encontraron errores en los datos!" %>
      </h2>
      <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>

      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :birth_date %><br />
    <%= f.text_field :birth_date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Ver estudiantes', students_path %>
